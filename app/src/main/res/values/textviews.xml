<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--region TextView -->
    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Detail">
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="TextView.Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.Title.Green">
        <item name="android:textColor">@color/green_500</item>
    </style>

    <style name="TextView.Title.Count">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>